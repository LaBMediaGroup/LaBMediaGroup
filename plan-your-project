<body class="gradient-bg">
    <div class="progress-bar">
        <div class="progress-fill" id="progressFill"></div>
    </div>

    <div id="root"></div>

    <script src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>

    <script type="text/babel">
        const { useState, useEffect } = React;

        function VideoProjectPlanner() {
            const [currentStep, setCurrentStep] = useState(1);
            const [formData, setFormData] = useState({
                // Step 1: Project Basics
                projectType: '',
                projectName: '',
                description: '',
                
                // Step 2: Vision & Style
                visualStyle: [],
                mood: '',
                references: '',
                
                // Step 3: Logistics
                shootLocation: '',
                shootDate: '',
                duration: '',
                budget: '',
                
                // Step 4: Deliverables
                deliverables: [],
                formats: [],
                timeline: '',
                
                // Step 5: Contact
                name: '',
                email: '',
                phone: '',
                company: '',
                additionalNotes: ''
            });

            const totalSteps = 5;

            useEffect(() => {
                const progress = (currentStep / totalSteps) * 100;
                document.getElementById('progressFill').style.width = `${progress}%`;
            }, [currentStep]);

            const handleInputChange = (field, value) => {
                setFormData(prev => ({
                    ...prev,
                    [field]: value
                }));
            };

            const handleArrayToggle = (field, value) => {
                setFormData(prev => ({
                    ...prev,
                    [field]: prev[field].includes(value)
                        ? prev[field].filter(item => item !== value)
                        : [...prev[field], value]
                }));
            };

            const nextStep = () => {
                if (currentStep < totalSteps) {
                    setCurrentStep(prev => prev + 1);
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                }
            };

            const prevStep = () => {
                if (currentStep > 1) {
                    setCurrentStep(prev => prev - 1);
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                }
            };

            const handleSubmit = () => {
                // This would send data to your backend
                console.log('Project Plan:', formData);
                alert('Project plan submitted! Our team will review and reach out shortly.');
            };

            const projectTypes = [
                'Commercial / Brand Video',
                'Music Video',
                'Event Coverage',
                'Documentary',
                'Product Photography',
                'Corporate / Training',
                'Social Media Content',
                'Other'
            ];

            const visualStyles = [
                'Cinematic',
                'Documentary',
                'Minimalist',
                'Energetic / Fast-paced',
                'Moody / Dark',
                'Bright / Airy',
                'Vintage / Film',
                'Modern / Tech'
            ];

            const deliverableOptions = [
                'Full-length video (2-5 min)',
                'Short-form edits (30-60s)',
                'Social media cuts (15-30s)',
                'Behind-the-scenes content',
                'Raw footage',
                'Photography stills',
                'Promotional graphics'
            ];

            const formatOptions = [
                '16:9 (YouTube, Web)',
                '9:16 (Instagram Stories, TikTok)',
                '1:1 (Instagram Feed)',
                '4:5 (Instagram Portrait)',
                'Custom aspect ratio'
            ];

            return (
                <div className="min-h-screen py-12 px-4 sm:px-6 lg:px-8">
                    <div className="max-w-4xl mx-auto">
                        {/* Header */}
                        <div className="text-center mb-12 fade-in">
                            <h1 className="bebas text-6xl mb-4 glow-text">
                                Plan Your Project
                            </h1>
                            <p className="text-gray-400 text-lg">
                                Let's bring your story to life—clean, cinematic, and intentional.
                            </p>
                        </div>

                        {/* Step Indicators */}
                        <div className="flex justify-center items-center gap-4 mb-12">
                            {[1, 2, 3, 4, 5].map((step) => (
                                <div key={step} className="flex items-center">
                                    <div className={`step-indicator ${currentStep === step ? 'active' : ''} ${currentStep > step ? 'completed' : ''}`}>
                                        {step}
                                    </div>
                                    {step < 5 && (
                                        <div className={`w-12 h-0.5 mx-2 ${currentStep > step ? 'bg-indigo-500' : 'bg-gray-700'}`} />
                                    )}
                                </div>
                            ))}
                        </div>

                        {/* Form Steps */}
                        <div className="card p-8 mb-8 fade-in">
                            {currentStep === 1 && (
                                <div>
                                    <h2 className="bebas text-3xl mb-6 text-indigo-300">Project Basics</h2>
                                    
                                    <div className="space-y-6">
                                        <div>
                                            <label className="block text-sm font-medium text-gray-300 mb-2">
                                                What type of project is this?
                                            </label>
                                            <select
                                                value={formData.projectType}
                                                onChange={(e) => handleInputChange('projectType', e.target.value)}
                                            >
                                                <option value="">Select a project type</option>
                                                {projectTypes.map(type => (
                                                    <option key={type} value={type}>{type}</option>
                                                ))}
                                            </select>
                                        </div>

                                        <div>
                                            <label className="block text-sm font-medium text-gray-300 mb-2">
                                                Project name (if you have one)
                                            </label>
                                            <input
                                                type="text"
                                                value={formData.projectName}
                                                onChange={(e) => handleInputChange('projectName', e.target.value)}
                                                placeholder="e.g., Summer Collection Launch, Artist EP Release"
                                            />
                                        </div>

                                        <div>
                                            <label className="block text-sm font-medium text-gray-300 mb-2">
                                                Tell us about your project
                                            </label>
                                            <textarea
                                                value={formData.description}
                                                onChange={(e) => handleInputChange('description', e.target.value)}
                                                rows="5"
                                                placeholder="What's the story? What message do you want to convey? Who's the audience?"
                                            />
                                        </div>
                                    </div>
                                </div>
                            )}

                            {currentStep === 2 && (
                                <div>
                                    <h2 className="bebas text-3xl mb-6 text-indigo-300">Vision & Style</h2>
                                    
                                    <div className="space-y-6">
                                        <div>
                                            <label className="block text-sm font-medium text-gray-300 mb-3">
                                                Visual style (select all that apply)
                                            </label>
                                            <div className="grid grid-cols-1 sm:grid-cols-2 gap-3">
                                                {visualStyles.map(style => (
                                                    <label key={style} className="checkbox-wrapper">
                                                        <input
                                                            type="checkbox"
                                                            checked={formData.visualStyle.includes(style)}
                                                            onChange={() => handleArrayToggle('visualStyle', style)}
                                                        />
                                                        <span className="text-gray-300">{style}</span>
                                                    </label>
                                                ))}
                                            </div>
                                        </div>

                                        <div>
                                            <label className="block text-sm font-medium text-gray-300 mb-2">
                                                Mood in three words
                                            </label>
                                            <input
                                                type="text"
                                                value={formData.mood}
                                                onChange={(e) => handleInputChange('mood', e.target.value)}
                                                placeholder="e.g., Bold, intimate, energetic"
                                            />
                                        </div>

                                        <div>
                                            <label className="block text-sm font-medium text-gray-300 mb-2">
                                                Visual references or inspiration
                                            </label>
                                            <textarea
                                                value={formData.references}
                                                onChange={(e) => handleInputChange('references', e.target.value)}
                                                rows="4"
                                                placeholder="Links to videos, images, or descriptions of work you admire"
                                            />
                                        </div>
                                    </div>
                                </div>
                            )}

                            {currentStep === 3 && (
                                <div>
                                    <h2 className="bebas text-3xl mb-6 text-indigo-300">Logistics</h2>
                                    
                                    <div className="space-y-6">
                                        <div>
                                            <label className="block text-sm font-medium text-gray-300 mb-2">
                                                Shoot location
                                            </label>
                                            <input
                                                type="text"
                                                value={formData.shootLocation}
                                                onChange={(e) => handleInputChange('shootLocation', e.target.value)}
                                                placeholder="City, venue, or general area"
                                            />
                                        </div>

                                        <div>
                                            <label className="block text-sm font-medium text-gray-300 mb-2">
                                                Ideal shoot date
                                            </label>
                                            <input
                                                type="text"
                                                value={formData.shootDate}
                                                onChange={(e) => handleInputChange('shootDate', e.target.value)}
                                                placeholder="Specific date or timeframe (e.g., early March 2025)"
                                            />
                                        </div>

                                        <div>
                                            <label className="block text-sm font-medium text-gray-300 mb-2">
                                                Expected duration of shoot
                                            </label>
                                            <select
                                                value={formData.duration}
                                                onChange={(e) => handleInputChange('duration', e.target.value)}
                                            >
                                                <option value="">Select duration</option>
                                                <option value="Half day (4 hours)">Half day (4 hours)</option>
                                                <option value="Full day (8 hours)">Full day (8 hours)</option>
                                                <option value="Multi-day">Multi-day</option>
                                                <option value="Not sure">Not sure</option>
                                            </select>
                                        </div>

                                        <div>
                                            <label className="block text-sm font-medium text-gray-300 mb-2">
                                                Budget range
                                            </label>
                                            <select
                                                value={formData.budget}
                                                onChange={(e) => handleInputChange('budget', e.target.value)}
                                            >
                                                <option value="">Select budget range</option>
                                                <option value="Under $2,500">Under $2,500</option>
                                                <option value="$2,500 - $5,000">$2,500 - $5,000</option>
                                                <option value="$5,000 - $10,000">$5,000 - $10,000</option>
                                                <option value="$10,000 - $25,000">$10,000 - $25,000</option>
                                                <option value="$25,000+">$25,000+</option>
                                                <option value="Flexible / Need guidance">Flexible / Need guidance</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            )}

                            {currentStep === 4 && (
                                <div>
                                    <h2 className="bebas text-3xl mb-6 text-indigo-300">Deliverables</h2>
                                    
                                    <div className="space-y-6">
                                        <div>
                                            <label className="block text-sm font-medium text-gray-300 mb-3">
                                                What do you need? (select all that apply)
                                            </label>
                                            <div className="grid grid-cols-1 gap-3">
                                                {deliverableOptions.map(option => (
                                                    <label key={option} className="checkbox-wrapper">
                                                        <input
                                                            type="checkbox"
                                                            checked={formData.deliverables.includes(option)}
                                                            onChange={() => handleArrayToggle('deliverables', option)}
                                                        />
                                                        <span className="text-gray-300">{option}</span>
                                                    </label>
                                                ))}
                                            </div>
                                        </div>

                                        <div>
                                            <label className="block text-sm font-medium text-gray-300 mb-3">
                                                Output formats needed
                                            </label>
                                            <div className="grid grid-cols-1 gap-3">
                                                {formatOptions.map(format => (
                                                    <label key={format} className="checkbox-wrapper">
                                                        <input
                                                            type="checkbox"
                                                            checked={formData.formats.includes(format)}
                                                            onChange={() => handleArrayToggle('formats', format)}
                                                        />
                                                        <span className="text-gray-300">{format}</span>
                                                    </label>
                                                ))}
                                            </div>
                                        </div>

                                        <div>
                                            <label className="block text-sm font-medium text-gray-300 mb-2">
                                                When do you need this completed?
                                            </label>
                                            <input
                                                type="text"
                                                value={formData.timeline}
                                                onChange={(e) => handleInputChange('timeline', e.target.value)}
                                                placeholder="e.g., 2 weeks after shoot, by April 15th, flexible"
                                            />
                                        </div>
                                    </div>
                                </div>
                            )}

                            {currentStep === 5 && (
                                <div>
                                    <h2 className="bebas text-3xl mb-6 text-indigo-300">Let's Connect</h2>
                                    
                                    <div className="space-y-6">
                                        <div>
                                            <label className="block text-sm font-medium text-gray-300 mb-2">
                                                Your name *
                                            </label>
                                            <input
                                                type="text"
                                                value={formData.name}
                                                onChange={(e) => handleInputChange('name', e.target.value)}
                                                placeholder="Full name"
                                                required
                                            />
                                        </div>

                                        <div>
                                            <label className="block text-sm font-medium text-gray-300 mb-2">
                                                Email *
                                            </label>
                                            <input
                                                type="email"
                                                value={formData.email}
                                                onChange={(e) => handleInputChange('email', e.target.value)}
                                                placeholder="your@email.com"
                                                required
                                            />
                                        </div>

                                        <div>
                                            <label className="block text-sm font-medium text-gray-300 mb-2">
                                                Phone number
                                            </label>
                                            <input
                                                type="tel"
                                                value={formData.phone}
                                                onChange={(e) => handleInputChange('phone', e.target.value)}
                                                placeholder="(123) 456-7890"
                                            />
                                        </div>

                                        <div>
                                            <label className="block text-sm font-medium text-gray-300 mb-2">
                                                Company or organization
                                            </label>
                                            <input
                                                type="text"
                                                value={formData.company}
                                                onChange={(e) => handleInputChange('company', e.target.value)}
                                                placeholder="Optional"
                                            />
                                        </div>

                                        <div>
                                            <label className="block text-sm font-medium text-gray-300 mb-2">
                                                Anything else we should know?
                                            </label>
                                            <textarea
                                                value={formData.additionalNotes}
                                                onChange={(e) => handleInputChange('additionalNotes', e.target.value)}
                                                rows="4"
                                                placeholder="Special requests, concerns, or additional context"
                                            />
                                        </div>

                                        <div className="bg-indigo-900 bg-opacity-20 border border-indigo-500 border-opacity-30 rounded-lg p-4 mt-6">
                                            <p className="text-sm text-gray-300">
                                                By submitting this plan, you'll receive a personalized consultation from our team. We'll review your details and reach out within 1-2 business days to discuss next steps.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            )}
                        </div>

                        {/* Navigation Buttons */}
                        <div className="flex justify-between items-center">
                            <button
                                onClick={prevStep}
                                className={`btn-secondary ${currentStep === 1 ? 'invisible' : ''}`}
                            >
                                ← Previous
                            </button>

                            {currentStep < totalSteps ? (
                                <button onClick={nextStep} className="btn-primary">
                                    Continue →
                                </button>
                            ) : (
                                <button onClick={handleSubmit} className="btn-primary">
                                    Submit Project Plan
                                </button>
                            )}
                        </div>

                        {/* Footer */}
                        <div className="text-center mt-12 text-gray-500 text-sm">
                            <p>LaB Media | Shelby Township, Michigan</p>
                            <p className="mt-1">Questions? We're here to help.</p>
                        </div>
                    </div>
                </div>
            );
        }

        ReactDOM.render(<VideoProjectPlanner />, document.getElementById('root'));
    </script>
</body>
</html>
