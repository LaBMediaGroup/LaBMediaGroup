<body>
    <div class="test-banner">
        ✅ NEW VERSION LOADED - December 28, 2025 3:20 AM
    </div>
    
    <h1>LaB Media Project Planner - Diagnostic Test</h1>
    
    <div class="status-box">
        <h2>Status:</h2>
        <p id="status">Checking...</p>
    </div>
    
    <div id="root"></div>
    
    <script>
        // Step 1: Log to console
        console.log('✅ Script started');
        document.getElementById('status').innerHTML = '1. HTML loaded ✅<br>';
        
        // Step 2: Load React
        const script1 = document.createElement('script');
        script1.src = 'https://unpkg.com/react@18/umd/react.production.min.js';
        script1.onload = () => {
            document.getElementById('status').innerHTML += '2. React loaded ✅<br>';
            console.log('✅ React loaded');
            
            // Step 3: Load ReactDOM
            const script2 = document.createElement('script');
            script2.src = 'https://unpkg.com/react-dom@18/umd/react-dom.production.min.js';
            script2.onload = () => {
                document.getElementById('status').innerHTML += '3. ReactDOM loaded ✅<br>';
                console.log('✅ ReactDOM loaded');
                
                // Step 4: Load Babel
                const script3 = document.createElement('script');
                script3.src = 'https://unpkg.com/@babel/standalone/babel.min.js';
                script3.onload = () => {
                    document.getElementById('status').innerHTML += '4. Babel loaded ✅<br>';
                    console.log('✅ Babel loaded');
                    
                    // Step 5: Run React code
                    const reactScript = document.createElement('script');
                    reactScript.type = 'text/babel';
                    reactScript.innerHTML = `
                        const { useState } = React;
                        function TestApp() {
                            const [count, setCount] = useState(0);
                            return (
                                <div style={{
                                    background: 'linear-gradient(135deg, #6366f1, #8b5cf6)',
                                    padding: '40px',
                                    borderRadius: '20px',
                                    textAlign: 'center'
                                }}>
                                    <h2 style={{fontSize: '2rem', marginBottom: '20px'}}>
                                        ✨ React is Working!
                                    </h2>
                                    <button 
                                        onClick={() => setCount(count + 1)}
                                        style={{
                                            background: 'white',
                                            color: 'black',
                                            padding: '15px 30px',
                                            fontSize: '18px',
                                            border: 'none',
                                            borderRadius: '10px',
                                            cursor: 'pointer',
                                            fontWeight: 'bold'
                                        }}
                                    >
                                        Clicked {count} times
                                    </button>
                                    <p style={{marginTop: '20px', opacity: 0.8}}>
                                        If you see this and can click the button, React works perfectly!
                                    </p>
                                </div>
                            );
                        }
                        
                        try {
                            ReactDOM.render(<TestApp />, document.getElementById('root'));
                            document.getElementById('status').innerHTML += '5. React component rendered ✅<br><br><strong>Everything works! Check below:</strong>';
                            console.log('✅ Component rendered');
                        } catch(err) {
                            document.getElementById('status').innerHTML += '❌ Render failed: ' + err.message;
                            console.error('Render error:', err);
                        }
                    `;
                    document.body.appendChild(reactScript);
                };
                script3.onerror = () => {
                    document.getElementById('status').innerHTML += '❌ Babel failed to load<br>';
                };
                document.head.appendChild(script3);
            };
            script2.onerror = () => {
                document.getElementById('status').innerHTML += '❌ ReactDOM failed to load<br>';
            };
            document.head.appendChild(script2);
        };
        script1.onerror = () => {
            document.getElementById('status').innerHTML += '❌ React failed to load<br>';
        };
        document.head.appendChild(script1);
    </script>
</body>
